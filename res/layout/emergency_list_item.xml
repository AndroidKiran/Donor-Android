<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/card_bg_r4">

    <TableLayout
        android:id="@+id/emergencyTable"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@color/dark_primary" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
			
            <com.cengalabs.flatui.views.FlatTextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Need"
                android:textAppearance="?android:attr/textAppearanceMedium" 
                android:layout_margin="2dip"
                android:layout_weight="1"
                flatui:textColor="main"
                flatui:theme="@array/snow"/>
            
            <com.cengalabs.flatui.views.FlatTextView
                android:id="@+id/textView_Emergency_BloodGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                flatui:textColor="main"
                flatui:theme="@array/snow"/>

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:gravity="center_vertical">
            
             <ImageView
                android:id="@+id/imageView_EShowOnMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dip"
                android:src="@drawable/ic_action_place" />

            <com.cengalabs.flatui.views.FlatTextView
                android:id="@+id/textView_Emergency_Place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                flatui:textColor="main"
                flatui:theme="@array/dark"/>
            
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:gravity="center_vertical">
            
             <ImageView
                android:id="@+id/imageView_EContactNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_action_call" />

            <com.cengalabs.flatui.views.FlatTextView
                android:id="@+id/textView_Emergency_ContactNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                flatui:textColor="main"
                flatui:theme="@array/dark"/>
            
        </TableRow>


    </TableLayout>
    
    <ImageView 
        android:id="@+id/throbber"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/ic_popup_sync_1"
	    android:visibility="gone"
  	/>

</RelativeLayout>
