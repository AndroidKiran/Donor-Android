<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Theme.Donorstyle" parent="@style/Theme.Sherlock.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_donorstyle</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Donorstyle</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Donorstyle</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Donorstyle</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Donorstyle</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Donorstyle</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_donorstyle</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_donorstyle</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Donorstyle</item>
        <item name="android:tabWidgetStyle">@style/Your.TabWidget</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerItem.DropDownItem</item>
    </style>

    <style name="ActionBar.Solid.Donorstyle" parent="@style/Widget.Sherlock.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_donorstyle</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_donorstyle</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_donorstyle</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Donorstyle</item>
        <item name="android:titleTextStyle">@style/ActionBar.Title.DonorStyle</item>
        <item name="titleTextStyle">@style/ActionBar.Title.DonorStyle</item>
    </style>

    <style name="ActionBar.Transparent.Donorstyle" parent="@style/Widget.Sherlock.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_donorstyle</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Donorstyle</item>
    </style>
    
    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Donorstyle.Widget" parent="@style/Theme.Sherlock">
        <item name="android:popupMenuStyle">@style/PopupMenu.Donorstyle</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Donorstyle</item>
    </style>
    
</resources>